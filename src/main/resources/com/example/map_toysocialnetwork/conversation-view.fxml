        <columns>
            <TableColumn fx:id="fromColumn" text="De la" prefWidth="100" />
            <TableColumn fx:id="messageColumn" text="Mesaj" prefWidth="300" />
            <TableColumn fx:id="dateColumn" text="Data" prefWidth="150" />
        </columns>
    </TableView>
    <HBox spacing="10">
        <TextField fx:id="messageTextField" promptText="ScrieÈ›i mesajul" HBox.hgrow="ALWAYS" />
        <Button text="Trimite" onAction="#handleSendMessage" />
